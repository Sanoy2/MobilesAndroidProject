<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity"
    android:padding="20dp"
    android:background="@color/colorMyBackround">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/recipe_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Sample name"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/recipe_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_name"
        android:text="50 minutes"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/recipe_detail_is_public"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_time"
        android:text="is public?"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/recipe_detail_last_modification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_is_public"
        android:text="long time ago"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/recipe_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_last_modification"
        android:text="Some long description"
        android:textSize="20dp"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/recipe_detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_detail_description"
        android:text="This is the place for image"
        android:textSize="20dp"
        android:padding="50dp"/>

</RelativeLayout>
</ScrollView>